<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/mymoviposter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
android:layout_marginBottom="75dp"
        android:src="@drawable/movieposter"
        app:layout_constraintBottom_toTopOf="@+id/controllayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/moreDetails"
        android:layout_width="40dp"
        android:layout_height="40dp"


        android:background="@drawable/infologo"

 android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/controllayout"
        app:layout_constraintEnd_toEndOf="@+id/controllayout"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/controllayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/likeMovieImage"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:text="Good"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <!--            <TextView-->
        <!--                android:id="@+id/rating"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_gravity="center"-->
        <!--                android:text="2022"-->
        <!--                android:textColor="@color/purple_500"-->
        <!--                android:textSize="20dp"-->
        <!--                android:textStyle="bold"-->
        <!--                android:visibility="gone" />-->
        <!-- -->

        <Button
            android:id="@+id/unikeMovieImage"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:text="Bad"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>